{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": ["eslint:recommended"],
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "globals": {
        "it": "readonly",
        "describe": "readonly",
        "expect": "readonly",
        "jest": "readonly",
        "require": "readonly",
        "beforeEach": true,
        "afterEach": true,
        "beforeAll": true,
        "module": true,
        "process": true
    },
    "rules": {
        "indent": [
            "error",
            4
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "quote-props": [
            "error",
            "always"
        ]
    }
}
